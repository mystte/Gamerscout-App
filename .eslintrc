{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "plugins": [
    "react",
    "import",
    "jsx-a11y"
  ],
  "rules": {
    "arrow-parens": "off",
    "arrow-body-style": "off",
    "function-paren-newline": [
      "error",
      "multiline"
    ],
    "max-len": [
      "warn",
      {
        "code": 150
      }
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 2,
        "maxBOF": 1,
        "maxEOF": 1
      }
    ],
    "import/extensions": [
      "error",
      {
        "ts": "never"
      }
    ],
    "import/prefer-default-export": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "react/destructuring-assignment": [
      "off",
      "always"
    ],
    "react/jsx-curly-brace-presence": [
      "error",
      {
        "props": "never",
        "children": "never"
      }
    ],
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/no-deprecated": "warn",
    "react/prop-types": [
      "error",
      {
        "ignore": [
          "dispatch",
          "history",
          "location",
          "match",
          "route",
          "styles"
        ]
      }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "impliedStrict": true
    }
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.8.4"
    },
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".json",
          ".ts",
          ".tsx"
        ]
      },
      "eslint-import-resolver-typescript": true
    }
  },
  "env": {
    "jest": true,
    "browser": true
  },
  "globals": {
    "__DEV__": true,
    "__VERSION__": true
  }
}