{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": false,
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./"
  },
  "include": [
    "sharedComponents/**/*",
    "sharedUtils/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/tests/*.jest.ts"
  ]
}
